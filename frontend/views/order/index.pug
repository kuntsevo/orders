extends ../layouts/layout

block content
  +page-wrapper('homepage__page')
    .user__wrapper
      form.user__box
        .user__box-inner.login.is-active(hidden)
          .user__title Войти
          .user__label Адрес электронной почты
          input.user__input(type="text")
          .user__label Пароль
          input.user__input(type="password")

        .user__box-inner.registration(hidden)
          .user__title Регистрация
          .user__label Ваше имя
          input.user__input(type="text" placeholder="")
          .user__label Номер телефона
          input.user__input(type="text" placeholder="+7(900)000-00-00")
          .user__label Адрес электронной почты
          input.user__input(type="text")
          .user__label Пароль
          input.user__input(type="password")

        button.btn.js-logged(type="button") Продолжить
        button.btn.btn-link.js-registration.is-active(type="button") Создать учетную запись
        button.btn.btn-link.js-login(type="button") У меня есть аккаунт
    .homepage__header
      .container
        .homepage__header-top
          if customer
            - var client_name = customer.first_name
          else
            - var client_name = 'уважаемый клиент'
          .homepage__welcome Добрый день, #{client_name}
          .request(hidden)           
            button.request__btn.js-request(type="button")
              img.request__icon(src='../img/plus.svg' alt="")
              | Записаться на сервис
            .request__confirmed
              img.request__icon(src='../img/check.svg' alt="")
              div
                .request__title Мы приняли вашу заявку, #[br]#{customer.first_name}!
                .request__text Наш менеджер свяжется с&nbsp;вами по&nbsp;телефону +7(957)1234567
              button.request__close(type="button")
                img(src='../img/close.svg' alt="")
          .toolbar(hidden)
            button.toolbar__toggle(type="button")
              img.img(src='../img/bar.svg' alt="")
            ul.toolbar__menu
              li.toolbar__item
                a.toolbar__link.js-request(href="#")
                  img.toolbar__link-icon(src='../img/phone.svg' alt="")
                  span.toolbar__link-text Заказать звонок
              li.toolbar__item
                a.toolbar__link.js-logout(href="#")
                  img.toolbar__link-icon(src='../img/logout.svg' alt="")
                  span.toolbar__link-text.red Выйти из аккаунта
    .homepage__content
      .container
        .homepage__top
          .homepage__filter
            button.homepage__filter-btn.is-active(type="button") Активные
            button.homepage__filter-btn(type="button") Завершенные
          .homepage__alert(hidden)
            .homepage__alert-icon !
            | По техническим причинам, работы приостановлены
        .order__list
          unless orders
            .order__item Нет документов в работе
          else
            each order in orders
              - var vehicle = order.vehicle
              .order__item        
                .order__item-status #{order.status}
                .order__item-id(hidden) #{order.uid}
                .order__item-title #{vehicle.model}
                .order__item-row
                  .order__item-address
                    svg(width="9" height="11" viewBox="0 0 9 11" fill="none" xmlns="http://www.w3.org/2000/svg")
                      path( d="M1.09091 3.98779C1.89091 0.527792 7.13091 0.527792 7.93091 3.98779C8.40091 6.01779 7.11091 7.73779 5.98091 8.80779C4.90079 9.88791 4.021 9.7878 3.201 9.0178C2.071 7.9478 0.62091 6.01779 1.09091 3.98779Z" stroke="#0B132B" stroke-width="1.5")
                      path( d="M4.50721 4.88791H4.51877" stroke="#0B132B" stroke-width="2" stroke-linecap="round" stroke-linejoin="round")
                    | #{order.dealer.name}
                  .order__item-number #{vehicle.registration_number}
                hr
                ul.order__item-info
                  li #{order.getAttributeLabel('repair_kind')}: #[span #{order.repair_kind}]
                  li #{order.getAttributeLabel('issuance_date')}: #[span #{_yii.app.formatter.asDate(order.issuance_date)}]
                  li.sum #{order.getAttributeLabel('amount_payable')}: #[span #{_yii.app.formatter.asCurrency(order.amountPayable)}]
                a.btn(href=_yii.app.urlHelper.to({0: '@payments', 'customer': customer.uid, 'order': order.uid})) Оплатить
                a.btn.btn-link(href=_yii.app.urlHelper.to({0: '@orderItem', 'customer': customer.uid, 'order': order.uid})) Подробнее

        a.order__promo(href="promo.html") 20% скидка #[br]на малярные работы #[br]в феврале
